{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <h1>Material</h1>

                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ material.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ material.name }}</td>
                    </tr>
                    <tr>
                        <th>Width</th>
                        <td>{{ material.width }}</td>
                    </tr>
                    <tr>
                        <th>Cutspeed</th>
                        <td>{{ material.cutSpeed }}</td>
                    </tr>
                    <tr>
                        <th>Drillingtime</th>
                        <td>{{ material.drillingTime }}</td>
                    </tr>
                    <tr>
                        <th>Dateadded</th>
                        <td>{% if material.dateAdded %}{{ material.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('material_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('material_edit', { 'id': material.id }) }}">Edit</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
