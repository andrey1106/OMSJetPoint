{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <h1>Company</h1>

                <table>
                    <tbody class="table table-striped">
                    <tr>
                        <th>Id</th>
                        <td>{{ company.id }}</td>
                    </tr>
                    <tr>
                        <th>Companyid</th>
                        <td>{{ company.companyID }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ company.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ company.address }}</td>
                    </tr>
                    <tr>
                        <th>Responsibleperson</th>
                        <td>{{ company.responsiblePerson }}</td>
                    </tr>
                    <tr>
                        <th>Isvat</th>
                        <td>{% if company.isVAT %}Yes{% else %}No{% endif %}</td>
                    </tr>
                    <tr>
                        <th>Dateadded</th>
                        <td>{% if company.dateAdded %}{{ company.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
                    </tr>
                    <tr><th>Contacts:</th><td></td></tr>
                    {% for contact in company.contacts %}
                        <tr>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.phone }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('company_index') }}">Back to the list</a>
                    </li>
                    <li>
                        <a href="{{ path('company_edit', { 'id': company.id }) }}">Edit</a>
                    </li>
                    <li>
                        <a href="{{ path('contact_new', { 'companyid': company.id }) }}">Create new contact</a>
                    </li>
                    <li>
                        {{ form_start(delete_form) }}
                        <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
